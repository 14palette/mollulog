{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev:web": "remix dev --manual -c \"yarn start\"",
    "start:web": "wrangler dev --test-scheduled ./build/index.js",
    "build:web": "remix build",
    "deploy:web": "wrangler deploy",

    "build:assets": "cd functions && GOOS=linux GOARCH=amd64 go build -tags lambda.norpc -o build/bootstrap ./assets-metadata",
    "plan:assets": "tofu -chdir=deploy/assets plan",
    "deploy:assets": "tofu -chdir=deploy/assets apply",

    "typecheck": "tsc",
    "lint": "eslint app/"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@headlessui/react": "^1.7.17",
    "@remix-run/cloudflare": "^2.3.0",
    "@remix-run/css-bundle": "^2.3.0",
    "@remix-run/react": "^2.3.0",
    "@supabase/supabase-js": "^2.38.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "dayjs": "^1.11.10",
    "hangul-js": "^0.2.6",
    "iconoir-react": "^7.0.2",
    "isbot": "^3.7.1",
    "nanoid": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-youtube": "^10.1.0",
    "remix-auth": "^3.6.0",
    "remix-auth-google": "^2.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@remix-run/dev": "^2.3.0",
    "@remix-run/eslint-config": "^2.3.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.54.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.4",
    "wrangler": "^3.16.0"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}
